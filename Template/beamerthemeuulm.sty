\newcommand{\leftandright}[2]{
    \begin{minipage}[t]{0.45\textwidth}
        #1
    \end{minipage}
    \hfill
    \begin{minipage}[t]{0.45\textwidth}
        #2
    \end{minipage}
}

\newcommand{\leftmiddleandright}[3]{
	\begin{minipage}[t]{0.3\textwidth}
        #1
    \end{minipage}
    \hfill
    \begin{minipage}[t]{0.3\textwidth}
        #2
    \end{minipage}
    \hfill
    \begin{minipage}[t]{0.3\textwidth}
        #3
    \end{minipage}
}

\newcommand{\leftthenright}[2]{
    \begin{minipage}[t]{0.45\textwidth}
        #1
    \end{minipage}
    \hfill
    \onslide<2->{
    \begin{minipage}[t]{0.45\textwidth}
        #2
    \end{minipage}
	}
}

\newcommand{\leftmiddlethenright}[3]{
	\begin{minipage}[t]{0.3\textwidth}
        #1
    \end{minipage}
    \hfill
    \onslide<2->{
    \begin{minipage}[t]{0.3\textwidth}
        #2
    \end{minipage}
	}
    \hfill
    \onslide<3->{
    \begin{minipage}[t]{0.3\textwidth}
        #3
    \end{minipage}
	}
}

\newcommand{\leftorright}[2]{ % only works in recording mode
    \ifrecording
    \onslide<1>{
    \begin{minipage}[t]{0.45\textwidth}
        #1
    \end{minipage}
	}
    \onslide<2>{\hfill}
    \onslide<3>{
    \begin{minipage}[t]{0.45\textwidth}
        #2
    \end{minipage}
	}
    \else
	\leftthenright{#1}{#2}
	\fi
}

\newcommand{\leftmiddleorright}[3]{ % only works in recording mode
    \ifrecording
    \onslide<1>{
	\begin{minipage}[t]{0.3\textwidth}
        #1
    \end{minipage}
	}
    \onslide<2>{\hfill}
    \onslide<3>{
    \begin{minipage}[t]{0.3\textwidth}
        #2
    \end{minipage}
	}
    \onslide<4>{\hfill}
    \onslide<5>{
    \begin{minipage}[t]{0.3\textwidth}
        #3
    \end{minipage}
	}
    \else
	\leftmiddlethenright{#1}{#2}{#3}
	\fi
}
