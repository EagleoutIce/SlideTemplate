% ---------------------------------------------
% import packages
% ---------------------------------------------
\usepackage{color}
\usepackage{fitbox} % used to auto-scale long frame titles
% ---------------------------------------------


% ---------------------------------------------
% colors
% ---------------------------------------------
% uulm color scheme:
\definecolor{black}{HTML}{000000}
\definecolor{uulmlogoblue}{HTML}{89a2b3}
\definecolor{uulmblue}{HTML}{7D9AAA}
\definecolor{uulmaccent}{HTML}{A9A28D}
\definecolor{green}{HTML}{56AA1C}
\definecolor{red}{HTML}{A32638}
\definecolor{orange}{HTML}{DF6D07}
\definecolor{blue}{HTML}{26547C}

% beamer colors:
\setbeamercolor{frametitle}{fg=black}
\setbeamercolor{myfooter}{fg=white,bg=uulmaccent}
\setbeamercolor{mypagenumber}{fg=white,bg=red}
% ---------------------------------------------


% ---------------------------------------------
% fonts
% ---------------------------------------------
\setbeamerfont{frametitle}{size=\LARGE, series=\bfseries}
% ---------------------------------------------


% ---------------------------------------------
% list environments
% ---------------------------------------------
\setbeamertemplate{itemize item}[square]
\setbeamertemplate{itemize subitem}[arrow]
\setbeamertemplate{itemize subsubitem}[circle]
\setbeamercolor{item}{fg=black}
% ---------------------------------------------


% ---------------------------------------------
% frame layout
% ---------------------------------------------
\setbeamertemplate{frametitle}{
    \vspace{20pt}
    \fitbox[maxheight=12pt,minheight=0pt,maxwidth=\textwidth,minwidth=0pt]{
        \insertframetitle{}
    }
}

\setbeamertemplate{footline}{
    \hbox{%
        \begin{beamercolorbox}[wd=0.93\textwidth,ht=3mm,dp=1.5mm,left]{myfooter}
            \hspace{20pt}
            \insertshortauthor
            \hfill
            \insertshorttitle\ -- \insertshortsubtitle\ \ifx \insertsectionhead \empty \else {-- \thesection.~\insertsectionhead} \fi 
            \hspace{20pt} 
        \end{beamercolorbox}%
        \begin{beamercolorbox}[wd=0.07\textwidth,ht=3mm,dp=1.5mm,center]{mypagenumber}
            \insertframenumber
        \end{beamercolorbox}%
    }%
}
% ---------------------------------------------


% ---------------------------------------------
% content layout
% ---------------------------------------------
\newcommand{\onlyleft}[1]{
    \begin{minipage}[t]{0.45\textwidth}
        #1
    \end{minipage}
}

\newcommand{\onlyright}[1]{
    \hfill
    \begin{minipage}[t]{0.45\textwidth}
        #1
    \end{minipage}
}

\newcommand{\leftandright}[2]{
    \begin{minipage}[t]{0.45\textwidth}
        #1
    \end{minipage}
    \hfill
    \begin{minipage}[t]{0.45\textwidth}
        #2
    \end{minipage}
}

\newcommand{\leftmiddleandright}[3]{
	\begin{minipage}[t]{0.3\textwidth}
        #1
    \end{minipage}
    \hfill
    \begin{minipage}[t]{0.3\textwidth}
        #2
    \end{minipage}
    \hfill
    \begin{minipage}[t]{0.3\textwidth}
        #3
    \end{minipage}
}
