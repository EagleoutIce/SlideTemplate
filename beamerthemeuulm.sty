\newcommand{\halfpage}[1]{\partofpage{48}{#1}}

\newcommand{\thirdpage}[1]{\partofpage{31}{#1}}

\usepackage{adjustbox}
\newcommand{\partofpage}[2]{
	\begin{minipage}{0.#1\textwidth}
			\begin{flushleft}
				#2
			\end{flushleft}
	\end{minipage}
}

% corresponds to '\halfpage', however, with the new columns we could use larger values
% (same for thirdnext)
\def\halfnext{.489\textwidth}
% corresponds to '\thirdpage'
\def\thirdnext{.31\textwidth}

\newcommand\leftandright[2]{%
    \halfpage{#1}%
    \hfill
    \halfpage{#2}%
}
% these commands are for the new column mechanism
\newcommand*\uulm@cols@leftandright{%
    \def\mynextcolumn{\column<1->{\halfnext}}%
    \def\@init{\mynextcolumn}% the "first" column
}

\newcommand\leftmiddleandright[3]{%
    \thirdpage{#1}%
    \hfill
    \thirdpage{#2}%
    \hfill
    \thirdpage{#3}%
}
\newcommand*\uulm@cols@leftmiddleandright{%
    \def\mynextcolumn{\column<1->{\thirdnext}}%
    \def\@init{\mynextcolumn}%
}

\newcommand\leftthenright[2]{%
    \halfpage{#1}%
    \hfill
    \onslide<2->{\halfpage{#2}}%
}
% instead of onslide we use the column-overlay specification for first and second
\newcommand*\uulm@cols@leftthenright{%
    \def\@init{\column<1->{\halfnext}}%
    \def\mynextcolumn{\column<2->{\halfnext}}%
}

\newcommand\rightthenleft[2]{
    \onslide<2->{\halfpage{#1}}
    \hfill
    \halfpage{#2}
}
\newcommand*\uulm@cols@rightthenleft{%
    \def\@init{\column<2->{\halfnext}}%
    \def\mynextcolumn{\column<1->{\halfnext}}%
}

\newcommand\leftmiddlethenright[3]{%
    \thirdpage{#1}%
    \hfill
    \onslide<2->{\thirdpage{#2}}%
    \hfill
    \onslide<3->{\thirdpage{#2}}%
}
\newcommand*\uulm@cols@leftmiddlethenright{%
    \def\@init{\column<1->{\thirdnext}}%
    % we redefine mynextcolumn within mynextcolumn so that it uses the overlay-specification <3->
    \def\mynextcolumn{\column<2->{\thirdnext}\def\mynextcolumn{\column<3->{\thirdnext}}}%
}

\newcommand\rightmiddlethenleft[3]{%
    \onslide<3->{\thirdpage{#1}}%
    \hfill
    \onslide<2->{\thirdpage{#2}}\hfill\thirdpage{#2}%
}
\newcommand*\uulm@cols@rightmiddlethenleft{%
    \def\@init{\column<3->{\thirdnext}}%
    \def\mynextcolumn{\column<2->{\thirdnext}\def\mynextcolumn{\column<1->{\thirdnext}}}%
}

\newcommand\leftorright[2]{%
\ifrecording
    \onslide<1>{\halfpage{#1}}%
    \onslide<2>{\hfill}%
    \onslide<3>{\halfpage{#2}}%
\else
    \leftthenright{#1}{#2}%
\fi
}
\newcommand*\uulm@cols@leftorright{%
\ifrecording
    \def\@init{\column<1->{\halfnext}}%
    \def\mynextcolumn{\column<3->{\halfnext}}%
\else
    \uulm@cols@leftthenright
\fi
}

\newcommand\rightorleft[2]{%
